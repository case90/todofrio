<?xml version="1.0" encoding="UTF-8" ?>

<themeeditor>
	<version value="1.4">
	<ccc available="true" />
	<guest_checkout available="true" />
	<one_page_checkout available="true" />
	<store_locator available="true" />
	</version>
	<author>Prestabrain</author>
<name>Live Theme Editor</name>	
<selectors>
		<items>
			<header>Body Content</header>
			<match>body</match>
			
 			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>body #page</selector>
				<attrs>background-color</attrs>
			</item>

			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>body</selector>
				<attrs>background-image</attrs>
			</item>

		 <item>
			<type>text</type>
			<label>Background Content</label>
			<selector>body #columns</selector>
			<attrs>background-color</attrs>
		</item> 
			<item>
				<type>fontfamily</type>
				<label>Font Family</label>
				<selector>body #page</selector>
				<attrs>font-family</attrs>
			</item> 

	 	<item>
			<type>fontsize</type>
			<label>Font-Size</label>
			<selector>body</selector>
			<attrs>font-size</attrs>
		</item> 


		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>body</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Link Color</label>
			<selector>body #page a</selector>
			<attrs>color</attrs>
		</item> 
		
	</items>
 
	<items>
		<header>TopBar</header>
		<match>topbar</match>

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#page #topbar</selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#topbar</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>#page #topbar</selector>
			<attrs>color</attrs>
		</item>  
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#page #topbar a</selector>
			<attrs>color</attrs>
		</item> 
	</items>


 <items>
		<header>Header</header>
		<match>Header</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#page #header</selector>
			<attrs>background-color</attrs>
		</item>

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#page #header-main</selector>
			<attrs>background-image</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Color</label>
			<selector>#page #header-main</selector>
			<attrs>color</attrs>
		</item>

	</items>




	<items>
		<header>MainMenu</header>
		<match>pav-mainnav</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#page #pts-mainnav</selector>
			<attrs>background-color</attrs>
		</item> 

		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#page #pts-top-menu</selector>
			<attrs>background-image</attrs>
		</item>
	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#page #pts-top-menu a</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Background Sub Menu</label>
			<selector>#page .pts-megamenu .dropdown-menu</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>text submenu</label>
			<selector>#page .pts-megamenu .dropdown-menu .widget-heading</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link submenu</label>
			<selector>#page .pts-megamenu .dropdown-menu ul li a</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Link Hover submenu</label>
			<selector>#page .pts-megamenu .dropdown-menu ul li a:hover</selector>
			<attrs>color</attrs>
		</item>
	</items>
	<items>
		<header>Footer Center</header>
		<match>footer-center</match>
			<item>
				<type>text</type>
				<label>Background Color</label>
				<selector>#page .footer-center, #page .pts-footer-center </selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Text</label>
				<selector>#page .footer-center, #page .pts-footer-center </selector>
				<attrs>color</attrs>
			</item> 

			<item>
				<type>text</type>
				<label>Color Link</label>
				<selector>#page .footer-center a,#page .pts-footer-center a </selector>
				<attrs>color</attrs>
			</item> 
			
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>#page .footer-center .title_block, #page .pts-footer-center .title_block</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>image</type>
				<label>Background Image</label>
				<selector>#page .footer-center, #page .pts-footer-center </selector>
				<attrs>background-image</attrs>
			</item>
	</items>	
	<items>
		<header>Powered</header>
		<match>powered</match>
		<item>
			<type>text</type>
			<label>Background Color</label>
			<selector>#page .pts-copyright</selector>
			<attrs>background-color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Text</label>
			<selector>#page .pts-copyright</selector>
			<attrs>color</attrs>
		</item> 

	 	<item>
			<type>text</type>
			<label>Color Link</label>
			<selector>#page .pts-copyright a</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>image</type>
			<label>Background Image</label>
			<selector>#page .pts-copyright</selector>
			<attrs>background-image</attrs>
		</item> 

	</items>
</selectors>

<elements>
	<items>
		<header>Products</header>
		<match>product</match>

		<item>
			<type>text</type>
			<label>Bg Product</label>
			<selector>#page .product-block</selector>
			<attrs>background-color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Product</label>
			<selector>#page .product-block</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Text Link</label>
			<selector>#page .product-block a</selector>
			<attrs>color</attrs>
		</item>
		<item>
			<type>text</type>
			<label>Color Price</label>
			<selector>#page .price .product-price</selector>
			<attrs>color</attrs>
		</item> 
		<item>
			<type>text</type>
			<label>Color Price New</label>
			<selector>#page .price .product-price.new-price</selector>
			<attrs>color</attrs>
		</item>
 		<item>
			<type>text</type>
			<label>Color Price Old</label>
			<selector>#page .price .price-old</selector>
			<attrs>color</attrs>
		</item> 
		
	</items>
	

	<items>
		<header>Modules Default in Sidebar</header>
		<match>modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>#page .sidebar .block .title_block</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>#page .sidebar .block .title_block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Heading Border Color</label>
				<selector>#page .sidebar .block .title_block</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>#page .sidebar .block .block_content</selector>
				<attrs>background-color</attrs>
			</item>   
			<item>
				<type>text</type>
				<label>Content border</label>
				<selector>#page .sidebar .block .block_content</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>#page .sidebar .product-block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>#page .sidebar .product-block .name a, #page .sidebar .block a</selector>
				<attrs>color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Color Price New</label>
				<selector>#page .sidebar .product-block .price</selector>
				<attrs>color</attrs>
			</item> 
 		
	 		<item>
				<type>text</type>
				<label>Color Price Old</label>
				<selector>#page .sidebar .product-block .price-old</selector>
				<attrs>color</attrs>
			</item>
	</items>

	<items>
		<header>Modules Highlight in Sidebar</header>
		<match>highlight-modules</match>
			<item>
				<type>text</type>
				<label>Heading Background</label>
				<selector>#page .sidebar .block.block-highlighted .title_block</selector>
				<attrs>background-color</attrs>
			</item> 
			<item>
				<type>text</type>
				<label>Heading Color</label>
				<selector>#page .sidebar .block.block-highlighted .title_block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Heading Border Color</label>
				<selector>#page .sidebar .block.block-highlighted .title_block</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Content Background</label>
				<selector>#page .sidebar .block.block-highlighted .block_content</selector>
				<attrs>background-color</attrs>
			</item>   
			<item>
				<type>text</type>
				<label>Content border</label>
				<selector>#page .sidebar .block.block-highlighted .block_content</selector>
				<attrs>border-color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>#page .sidebar .block-highlighted .product-block</selector>
				<attrs>color</attrs>
			</item>
			<item>
				<type>text</type>
				<label>Link Color</label>
				<selector>#page .sidebar .block-highlighted .product-block .name a, #page .sidebar .block-highlighted .block a</selector>
				<attrs>color</attrs>
			</item>  
			<item>
				<type>text</type>
				<label>Color Price New</label>
				<selector>#page .sidebar .product-block .price</selector>
				<attrs>color</attrs>
			</item> 
 		
	 		<item>
				<type>text</type>
				<label>Color Price Old</label>
				<selector>#page .sidebar .block-highlighted .product-block .price-old</selector>
				<attrs>color</attrs>
			</item>
	</items>

</elements>
</themeeditor>
